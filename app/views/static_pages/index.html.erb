<h1>Find a game to join</h1>
<ul>
  <% @available_games.each do |game| %>
    <% if game.white_player%>
      <li><%= link_to game.white_player.name + "'s game", "games/#{game.id}"%></li>
    <% elsif game.black_player %>
      <li><%= link_to game.black_player.name + "'s game", "games/#{game.id}"%></li>
    <%end%>
  <% end %>
  <li>Feel free to create a new Game: <%= link_to "click here",  games_path, method: :post %></li>
</ul>
